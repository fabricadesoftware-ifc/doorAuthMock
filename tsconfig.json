{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/*.ts"],
  "exclude": ["node_modules"]
}

